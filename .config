CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mediatek7981=y
CONFIG_TARGET_mediatek_mediatek7981_DEVICE_cmcc_a10=y

CONFIG_TARGET_BOARD="mediatek"
CONFIG_TARGET_SUBTARGET="mediatek7981"
CONFIG_TARGET_PROFILE="DEVICE_cmcc_a10"
CONFIG_TARGET_ARCH_PACKAGES="aarch64_cortex-a53"
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-O2 -pipe -mcpu=cortex-a53"
CONFIG_USE_GLIBC=y

# 内存优化
CONFIG_KERNEL_DEFERRED_STRUCT_PAGE_INIT=y
CONFIG_KERNEL_ZRAM=y
CONFIG_PACKAGE_zram-swap=y
CONFIG_PACKAGE_zram-tmpfs=y

# 分区
CONFIG_TARGET_KERNEL_PARTSIZE=64
CONFIG_TARGET_ROOTFS_PARTSIZE=110
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# MTK WIFI
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_kmod-mt-wifi=y
CONFIG_PACKAGE_wpad-openssl=y

# 加速
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_DEFAULT_TCP_CONG=bbr
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_TURBOACC_INCLUDE_FLOW_OFFLOAD=y
CONFIG_TURBOACC_INCLUDE_FULLCONE=y
CONFIG_PACKAGE_luci-app-sqm=y

# 网络
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_ipv6helper=y

# DNS
CONFIG_PACKAGE_luci-app-mosdns=y
CONFIG_PACKAGE_luci-app-ddnsto=y

# 监控
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-app-watchcat=y

# 工具
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-filetransfer=y

# 科学
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall2=y

# 主题
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y

# 插件商店
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-lib-ipkg=y

# 精简内核
CONFIG_KERNEL_DEBUG_INFO=n
CONFIG_KERNEL_TRACING=n
CONFIG_KERNEL_SLUB_DEBUG=n
CONFIG_KERNEL_PROFILING=n
CONFIG_KERNEL_KALLSYMS=n

# 关闭多余
CONFIG_PACKAGE_adguardhome=n
CONFIG_PACKAGE_netdata=n
CONFIG_PACKAGE_https-dns-proxy=n
CONFIG_PACKAGE_pdnsd=n
CONFIG_PACKAGE_pdnsd-alt=n
CONFIG_PACKAGE_adblock=n
CONFIG_PACKAGE_simple-adblock=n

# 基础LUCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_LUCI_LANG_zh_Hans=y
